<Window x:Class="temp_Interface.FileIndexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:temp_Interface"
        mc:Ignorable="d"
        Title="Indexer un dossier local" Height="173.668" Width="182.001">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="45"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="193*" MinWidth="70"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="64*" MinWidth="60"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblLocation" Content="Emplacement" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Padding="0" Grid.Row="1" />
            <TextBox x:Name="txtBLocation" TextWrapping="Wrap" Grid.Column="1" Grid.Row="2" Margin="0,5,0,0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
            <Button x:Name="btnLocation" Content="Parcourir..." Padding="0" Grid.Column="3" Grid.Row="2" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
        </Grid>
        <Grid d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="35*" MinWidth="30"/>
                <ColumnDefinition Width="267*" MinWidth="70"/>
                <ColumnDefinition Width="35*" MinWidth="30"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblType" Content="Type d'indexation" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" Padding="0" Grid.Row="1" Grid.ColumnSpan="3" />
            <ListBox x:Name="listBox" Grid.Column="2" Grid.Row="2" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Margin="0,5,0,0">
                <ListBoxItem Content="Partiel" Height="20"/>
                <ListBoxItem Content="Complet" Height="20"/>
            </ListBox>
        </Grid>

    </Grid>
</Window>
